@import 'jeet'


//make the menu bg black when on the jobs page.
body.careers.job
	footer
		background black


footer
	overflow: auto
	position: fixed
	bottom: 0px
	width: 90%
	font-size: 18px
	color white
	background none
	height 68px
	padding-top: 42px;
	border-top: 1px solid rgba(255,255,255,0.3);
	left: 50%;
	transform: translateX(-50%);
	&.add_black
		background black
	.copy__holder
		float left			
	cf()
	+below(911px)
		height 105px
	+below(503px)
		center(310px)
		position relative
		height: 100px;
		.address
			display block
			margin-top 5px
	.address
		opacity: .4;
	nav
		float right
		.link
			color white
			text-decoration none
			padding-left 50px
			transition: all linear .2s
			&:hover
				opacity: 0.6
		+below(911px)
			float: none;
			margin-top: 30px;
			.link
				padding-left 0px
				padding-right 44px
