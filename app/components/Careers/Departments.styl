@import 'jeet'
@import 'parallax'

@keyframes fadeIn { from { opacity:0; } to { opacity:1; } }

.parallax__group
	position: relative;
	height: 500px; /* fallback for older browsers */
	height: 100vh;
	-webkit-transform-style: preserve-3d;
	transform-style: preserve-3d;

// slides
.intro
	background: url('../../images/carreers.bg.1.jpg') no-repeat
	background-size cover
	
.careers-container-departments
	color: white
	height: auto;
	padding-bottom: 100px;
	cf()
	& .error_state
		display none
		min-height: 400px
		animation fadeIn ease-in 1;
		animation-duration:1s;
		animation-fill-mode:forwards;
		text-align center
		h3
			box-sizing border-box
			padding-bottom: 20px
			display table
			font-size: 32px;
			text-align center
			width 100%
		p 
			line-height: 25px;
			a
				color white
	&.show-error
		.error_state
			display block !important
	.headline__holder
		margin-top: -6%;
		align(both)
		.button
			background none
			border 1px solid white
			color white !important
			font-weight 100
			letter-spacing: 0.1em;
		.headline
			letter-spacing 0.0625em
			font-size:4vw;
			margin: 0px auto;
			width: 100%;
			padding-bottom: 75px
			text-align: left;
			animation fadeIn ease-in 1;
			animation-duration:1s;
			animation-fill-mode:forwards;
			line-height: 1.3em;
			font-weight: 100;
			&:before
				content "__"
				position absolute
				margin-left -39px
				letter-spacing 0px
				font-size 28px
				font-family arial-light
				margin-top 5px
		+mobile()
			font-size 44px
			padding-bottom: 45px
	.departments
		li.department
			col(.49, cycle:2, gutter:0)
			text-align: center;
			opacity: 0
			opacity 0
			animation fadeIn ease-in 1;
			animation-duration:1s;
			animation-fill-mode:forwards;
			margin-bottom:2%;
			position: relative
			cursor: pointer
			+below(911px)
				stack()
			&:before
				content: ' '
				width: 92px
				height: 1px
				display: inline-block !important
				background:  #333
				position: absolute
				bottom: 2px
				left: 50%
				margin-left: -46px
			& a
				text-decoration: none
				color: white
				font-size: 24px;
				letter-spacing: 1px;
				font-weight:bold
				display:block
				padding:70px 102px;
				background: rgba(0,0,0,1)
				transition: background .2s ease-in-out;
				+mobile()
					padding: 70px 44px;
				p.openingCount
					font-weight: 100;
					font-style: initial;
					font-size: 17px;
					position: relative;
					top: 16px;
					color: #666;
					transition-timing:0s;
				&:hover
					background: #333
				
						
		&:nth-child(1) {
		  animation-delay: 0.2s
		}
		&:nth-child(2) {
		  animation-delay: 0.2s
		}
		&:nth-child(3) {
		  animation-delay: 0.3s
		}
		&:nth-child(4) {
		  animation-delay: 0.35s
		}
		&:nth-child(5) {
		  animation-delay: 0.1s
		}
		&:nth-child(6) {
		  animation-delay: 0.4s 
		}
		&:nth-child(7) {
		  animation-delay: 0.1s
		}
		&:nth-child(8) {
		  animation-delay: 0.55s
		}
			