form
  box-sizing border-box
  height 940px
  position relative
  background rgba(0, 0, 0, 0) none no-repeat scroll 0% 0% / auto padding-box border-box
  font normal normal normal normal 14px / 21px Galaxie
  margin 0px
  font-family: 'FoundersGrotesk', Helvetica, Arial, sans-serif !important
  input[type=submit]
    clear both
    color black
    cursor pointer
    display block
    position relative
    text-align center
    background white
    border 0px none rgb(255, 255, 255)
    padding 18px 32px
    transition background-color 0.3s ease 0s, opacity 0.3s ease 0s
    font-size medium
    outline none
    &:hover
      background #2F2F2F
      color rgb(255, 255, 255)
  .field__validation
    color red
  fieldset
    box-sizing border-box
    background rgba(0, 0, 0, 0) none no-repeat scroll 0% 0% / auto padding-box border-box
    border 0px none rgb(0, 0, 0)
    margin 0px
    padding 0px
    clear both
    width 100%
  h3
    box-sizing border-box
    padding-bottom: 20px
    display table
    font-size: 32px;
    text-align center
    width 100%
  .req
    text-align right
    color grey
    margin-right: -9px;
    padding-bottom: 10px;
  input[type=text],input[type=email],input[type=tel],input[type=url]
    clear left
    color rgb(51, 51, 51)
    display block
    height 33px
    position relative
    width 700px
    background rgb(240, 240, 240) none repeat scroll 0% 0% / auto padding-box border-box
    border none
    margin 0px 0px 24px
    outline rgb(51, 51, 51) none 0px
    padding 20px 32px
    font-size medium
  input[type=file]
    width 0.1px
    height 0.1px
    opacity 0
    overflow hidden
    position absolute
    z-index -1
  .input-wrapper
    box-sizing border-box
    float left
    height 82px
    margin 0px 16px 24px 0px
    span
      box-sizing border-box
      color grey
      display block
      text-align center
      font normal 12px / 18px 'FoundersGrotesk', Helvetica, Arial, sans-serif 
      margin 10px 0px 0px
      
  a, .file__label
    box-sizing border-box
    color black
    cursor pointer
    display inline-block
    height 54px
    position relative
    text-decoration none
    background white
    border 0px none rgb(255, 255, 255)
    font normal normal bold normal 13px / 54px 'FoundersGrotesk', Helvetica, Arial, sans-serif 
    outline rgb(255, 255, 255) none 0px
    padding 0px 32px
    transition background-color 0.3s ease 0s, opacity 0.3s ease 0s
    font-size medium
    &:hover
      background #2F2F2F
      color rgb(255, 255, 255)


