@import 'jeet'
@import 'nib'

global-reset()


@font-face {
	font-family: 'FoundersGrotesk';
	src: url('../fonts/hello.eot');
	src: local('â˜º'), url('../fonts/hello.woff') format('woff'), url('../fonts/hello.ttf') format('truetype'), url('../fonts/hello.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}

.button
	background: #FFFFFF;
	text-decoration: none;
	padding: 13px 48px;
	font-size: 19px;
	transition all .3s
	color: black
	&:visited, &:active, &:focus
		color black
	&:hover
		background #2F2F2F
		color white
	
.parallax
	font-size: 200%

html
	font-family: 'FoundersGrotesk', Helvetica, Arial, sans-serif
	background: #000
	height: auto
	body
		+below(500px)
			padding: 27px;
		background black
		position: relative
		box-sizing: border-box
		min-height: 100vh
		height: 100%
		width: 100%
		font-family: 'FoundersGrotesk', Helvetica, Arial, sans-serif
		font: 100% / 1.5
		color white
		transition: background 100ms linear;
